<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Profile Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="start|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/white_circle"
                android:contentDescription="@string/name_prototype"
                android:src="@drawable/profile" />

            <!-- SKELETON NAMA -->
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shimmer_auto_start="true">

                <View
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:background="@drawable/bg_skeleton_rounded"/>
            </com.facebook.shimmer.ShimmerFrameLayout>

            <TextView
                android:id="@+id/txtName"
                style="@style/TitleTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_prototype"
                android:textColor="@color/black"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Container Biru -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:backgroundTint="@color/rich_electric_blue"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/btnSemester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/yellow_orange"

                android:drawableEnd="@drawable/ic_chevron_down"
                android:drawablePadding="0dp"
                android:gravity="center"

                android:includeFontPadding="false"
                android:paddingVertical="10dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/semester_prototype"
                android:textAllCaps="false"
                android:textColor="@color/white" />


            <!-- Daftar mata kuliah -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvEnrollment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            />
    </LinearLayout>
</ScrollView>
