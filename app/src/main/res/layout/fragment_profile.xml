<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <!-- === LOADING OVERLAY === -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:visibility="gone"
        android:indeterminate="true"
        android:layout_centerInParent="true" />

    <!-- === SEMUA KONTEN DIBUNGKUS DI SINI === -->
    <LinearLayout
        android:id="@+id/contentGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Bagian Header dengan background biru -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/rich_electric_blue"
            android:padding="20dp">

            <!-- Foto profil (icon user) -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/name_prototype"
                android:src="@drawable/profile"
                android:background="@drawable/white_circle" />

            <!-- Nama -->
            <TextView
                style="@style/TitleTextStyle"
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_prototype"
                android:textColor="@color/white"
                android:layout_marginTop="8dp" />

            <!-- NIK / ID -->
            <TextView
                style="@style/DescriptionRegularTextStyle"
                android:id="@+id/tvId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nim_prototype"
                android:textColor="@color/white"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Bagian Konten -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Label Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/profile_page"
                    android:src="@drawable/ic_email"
                    android:tint="@color/rich_electric_blue"
                    android:layout_marginEnd="8dp"
                    tools:ignore="UseAppTint" />

                <TextView
                    style="@style/DescriptionBoldTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/rich_electric_blue"
                    android:text="@string/email" />
            </LinearLayout>

            <!-- Isi Email -->
            <TextView
                style="@style/DescriptionRegularTextStyle"
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_prototype"
                android:layout_marginStart="28dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/black" />

            <!-- Garis pemisah -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="12dp" />

            <!-- Tombol Logout -->
            <Button
                style="@style/TitleTextStyle"
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:textAllCaps="false"
                android:layout_marginTop="100dp"
                android:textColor="@color/white"
                android:padding="12dp"
                android:background="@drawable/rounded_button" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
