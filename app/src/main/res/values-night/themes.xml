<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HereNow" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/yellow_orange</item>
        <item name="colorOnPrimary">@color/yellow_orange</item>
        <item name="colorSecondary">@color/yellow_orange</item>
        <item name="colorOnSecondary">@color/yellow_orange</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="HeaderTextStyle">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="HeaderItalicTextStyle">
        <item name="android:fontFamily">@font/opensans_semibold_italic</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TitleItalicTextStyle">
        <item name="android:fontFamily">@font/opensans_semibold_italic</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DescriptionBoldTextStyle">
        <item name="android:fontFamily">@font/opensans_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DescriptionRegularTextStyle">
        <item name="android:fontFamily">@font/opensans_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>