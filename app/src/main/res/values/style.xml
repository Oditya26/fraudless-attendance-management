<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/RoundedDialogShape</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorPrimary">@color/rich_electric_blue</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonText</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonText</item>
    </style>

    <style name="DialogButtonText" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/rich_electric_blue</item>
    </style>

    <style name="RoundedDialogShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


</resources>