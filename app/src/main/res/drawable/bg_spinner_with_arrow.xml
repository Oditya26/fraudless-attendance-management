<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Latar + ruang untuk panah di kanan -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white_semi_transparant"/>
            <corners android:radius="12dp" />
            <!-- Tambah right padding besar agar teks tidak menimpa panah -->
            <padding
                android:left="12dp"
                android:top="8dp"
                android:right="56dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <!-- Ikon panah bawah, center vertikal, 12â€“20dp dari tepi kanan -->
    <item
        android:gravity="end|center_vertical"
        android:right="16dp"
        android:drawable="@drawable/ic_arrow_drop_down" />
</layer-list>
